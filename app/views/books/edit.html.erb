<h1><%= link_to "Books", books_path %></h1>

<h2>Edit</h2>
<%= form_with model:@book, local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <br>
    <%= f.submit 'Update Book' %>
    <br>
    <%= flash[:notice] %>
    <% if @book.errors.any? %>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>   
    <% end %>
    <br>
    <%= link_to "Back", books_path %>
<% end %>


