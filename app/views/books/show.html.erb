<h1><%= link_to "Books", books_path %></h1>

<table>
    <tr>
        <th>Title</th>
        <th>Body</th>    
    </tr>
    <tr>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <td><%= link_to "Edit", edit_book_path(@book) %></td>
        <td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
    </tr>
    
    <%= form_with model:@book, local:true do |f| %>
        <% if @book.errors.any? %>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>   
        <% end %>
    <% end %>
</table>



